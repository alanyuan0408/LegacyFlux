<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>

<script>

    function initialize2(){
        //Initialize the object defined in NewsLetter Generator
        if (typeof pageObject2 == "undefined"){
          pageObject2 = new pageIndex(<%= @mail_posts.length %>, "itemPosts3", "pagenumber2");
        }

      pageObject2.initialize('.a_mail', 'posts3');
      orderRelease()
      addClick()

    }


    $(document).ready(initialize2);
    $(document).on('page:load', initialize2);

    $(document).ready(orderRelease);
    $(document).on('page:load', orderRelease);

</script>


<h4>Mail Generator Panel</h4>
<br>


        </div>

      	<div class="tab-pane" id="Generate_Items" onclick="initialize2()">
            <div class="panel-content">
            	<%= render :partial => "users/userPartial/generateItems" %>
            </div>
        </div>

        <div class="tab-pane" id="Generate_Tibbits" onclick="addClick()">
